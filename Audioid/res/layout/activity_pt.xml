<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PTA" >
    
    <Button
        android:id="@+id/volUpMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vol_up"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:onClick="volUpMusic"
        />
    
    <Button
        android:id="@+id/playMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/play"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:onClick="playMusic"
        android:layout_above="@id/volUpMusic"/>
    
    <Button
        android:id="@+id/volDownMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vol_down"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:onClick="volDownMusic"
        android:layout_below="@id/volUpMusic"/>
    
    <Button
        android:id="@+id/stopMusic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:onClick="stopMusic"
        android:layout_below="@id/volDownMusic"/>
    
    <TextView
        android:id="@+id/PTAname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/playMusic"
        android:layout_centerInParent="true"
        android:text="@string/pure_tone_audiometry"
        android:textAlignment="center"
        android:textSize="30sp" />
    
    <Button
        android:id="@+id/BackToMenuButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_menu"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:layout_below="@id/stopMusic"
        android:onClick="getBack"/>

</RelativeLayout>
